<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx" prefHeight="1000.0" prefWidth="800.0"
            fx:controller="com.jpro.hellojpro.createController">
    <children>
        <Label layoutX="108.0" layoutY="65.0" text="Game Code :">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <Label layoutX="112.0" layoutY="194.0" text="Name : ">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <Label layoutX="112.0" layoutY="282.0" text="Players List :">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <TextField fx:id="txtGameCode" layoutX="309.0" layoutY="57.0">
            <font>
                <Font size="24.0"/>
            </font>
        </TextField>
        <TextField fx:id="txtName" layoutX="309.0" layoutY="186.0">
            <font>
                <Font size="24.0"/>
            </font>
        </TextField>
        <Button layoutX="118.0" layoutY="656.0" mnemonicParsing="false" onAction="#selectGuesser" prefHeight="51.0"
                prefWidth="170.0" text="Start Game">
            <font>
                <Font size="24.0"/>
            </font>
        </Button>
        <Label fx:id="txtComment" layoutX="346.0" layoutY="668.0" prefHeight="27.0" prefWidth="388.0">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Button layoutX="494.0" layoutY="118.0" mnemonicParsing="false" onAction="#generateCode" prefHeight="39.0"
                prefWidth="113.0" text="Generate">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <ComboBox fx:id="playerNames" layoutX="309.0" layoutY="280.0" prefHeight="40.0" prefWidth="298.0"
                  promptText="Players" visibleRowCount="20"/>
        <Button layoutX="625.0" layoutY="281.0" mnemonicParsing="false" onAction="#showPlayerList" text="Refresh">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
